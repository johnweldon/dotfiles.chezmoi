[core]
  editor = vim
  pager = less -F -X -E
  autocrlf = false
  trustctime = false
  precomposeunicode = false
  whitespace = space-before-tab,-indent-with-non-tab,trailing-space

[user]
  name = {{ .user.name }}
  email = {{ .user.email }}

[http]
  cookiefile = {{ .chezmoi.homedir }}/.gitcookies

[gui]
  encoding = utf-8

[log]
  date = iso
  decorate = true

[apply]
  whitespace = fix

[help]
  autocorrect = 1

[push]
  default = simple

[diff]
  renameLimit = 5000
  renames = copy
  mnemonicprefix = true

[url "git@github.com:"]
  insteadOf = https://github.com/
  insteadOf = git://github.com/
  insteadOf = gh:

[url "git@bitbucket.org:"]
  insteadOf = https://bitbucket.org/
  insteadOf = git://bitbucket.org/
  insteadOf = bb:

[http "https://gopkg.in"]
  followRedirects = true

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red
  new = green
  whitespace = red reverse

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[format]
  pretty = %C(bold red)%h%Creset %C(white)%>(8,trunc)%ar%Creset %Cgreen%<(12,trunc)%aN%Creset %C(bold normal)%<(30)%s%Creset %C(auto)%d%Creset 
  ##>

[include]
  path = .git.aliases
  path = .local.gitconfig
